{
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["es2015", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "strictNullChecks": true,
    "target": "es2015"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
